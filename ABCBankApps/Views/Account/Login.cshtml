@model ABCBankApps.Models.AccountUser

@{
    ViewBag.Title = "Login";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

   
<h4>Account Login</h4>

@using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role="form"}))
{
   switch((string)ViewBag.ValidResult)
       
   {
       case "Null":
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>   @Html.ValidationSummary() </strong>
                    
                                </div>
break;

}

      <div class="col-md-6">
<div class="form-group">
    @Html.TextBoxFor(model=>model.nEmail,
    new 
    {
        placeholder ="* Enter email address",
        pattern=".+\\@.+\\..+",
        @class="form-control input-md",
        required="required",
        type="email"
        
    }
    
    )
</div>
       <div class="form-group">
        
            @Html.PasswordFor(model => model.nPassword,
            new{
                placeholder="* Enter password",
                type="password",
                @class ="form-control input-md",
                required="required"
            }
            )
        </div>

          <button class="btn btn-lg btn-theme" type="submit">Login</button>
     <button class="btn btn-lg btn-theme" type="reset">Reset</button>
            </div>
}
       
        </div>

    </div>
        </div>
</section>

