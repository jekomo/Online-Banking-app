@model ABCBankApps.Models.AccountUser

@{
    ViewBag.Title = "Registration";
}
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

   
<h4>Sign Up</h4>

@using (Html.BeginForm("Registration", "Account",FormMethod.Post, new { role="form"}))
{
    switch ((string)ViewBag.ValidResult)
    {

        case "Success":
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong> Registration Sucessfull !</strong>
                    
                                </div>

            break;
             case "EmailTaken":
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong> @Html.ValidationSummary()</strong>
                    
                                </div>

            break;
            case "Null":
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong> @Html.ValidationSummary()</strong>
                    
                                </div>

            break;

    }
   


      <div class="col-md-6">
<div class="form-group">
    @Html.TextBoxFor(model=>model.nEmail,
    new 
    {
        placeholder ="* Enter email address",
        pattern=".+\\@.+\\..+",
        @class="form-control input-md",
        required="required",
        type="email"
        
    }
    
    )
</div>
       <div class="form-group">
        
            @Html.PasswordFor(model => model.nPassword,
            new{
                placeholder="* Enter password",
                type="password",
                @class ="form-control input-md",
                required="required"
            }
            )
        </div>

          <button class="btn btn-lg btn-theme" type="submit">Register</button>
     <button class="btn btn-lg btn-theme" type="reset">Reset</button>
            </div>
}
       
        </div>

    </div>
        </div>
</section>

