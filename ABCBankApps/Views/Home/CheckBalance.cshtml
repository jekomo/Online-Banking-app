
@model ABCBankApps.Models.CustomersAcct

@{
    ViewBag.Title = "CheckBalance";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

   
<h4>Check Customer's Account Balance</h4>
                @using (Ajax.BeginForm(new AjaxOptions
                {
                    
                 HttpMethod="post",
                 InsertionMode=InsertionMode.Replace,
                 UpdateTargetId="checkBalResult",
                 LoadingElementId="loading",
                 LoadingElementDuration=100000,
          
                }
                ))
                
                    
                {   
                   
    switch ((string)ViewBag.ValidResult)
    {

        case "NoAcctNo":
            <div class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                  <strong> @Html.ValidationSummary()</strong>
                    
                                </div>

            break;
            case "Null":
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong> @Html.ValidationSummary()</strong>
                    
                                </div>

            break;

    }
   


      <div class="col-md-6">
<div class="form-group">
    @Html.TextBoxFor(model=>model.iAcNo,
    new 
    {
        placeholder ="* Enter Account Number",
        pattern="\\d+",
        @class="form-control input-md",
        required="required",
        type="text"
        
    }
    
    )
</div>
          <button class="btn btn-lg btn-theme" type="submit">Check</button>
     <button class="btn btn-lg btn-theme" type="reset">Clear</button>
            </div>
}
